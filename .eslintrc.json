{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:prettier/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": ["@typescript-eslint", "import", "prettier"],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "proyect": "./tsconfig.json"
    },
    "rules": {
        "prettier/prettier": "error",
        "import/no-unresolved": "error",
        "no-console": "error",
        "allow": ["warn", "error"] 
    }
}
